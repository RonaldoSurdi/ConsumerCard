<div class="container">
  <h1 class="txtDourado titulo"><%= @premio.descricao %></h1>
  <div class="row">
    <div class="col-md-12">
      <%= image_tag @premio.imagem.url, alt: @premio.descricao, title: @premio.descricao, class: "img-responsive", style: "margin: 0 auto; max-height: 500px;" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-left">
      <%= raw @premio.descricao_completa.nl2br %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 text-right">
      <%= link_to "Voltar", premiacoes_path, class: "btn btn-default", style: "margin: 20px 0" %>
    </div>
  </div>
</div>