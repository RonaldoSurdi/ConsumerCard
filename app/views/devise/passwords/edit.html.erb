<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h1 class="titulo txtDourado">Formulário para troca de senha</h1>

      <%= form_for(resource, :as => resource_name, :url => cliente_user_password_path, :html => { :method => :put }) do |f| %>
        <%= raw resource.errors.full_messages.to_a.uniq.map { |msg| content_tag(:div, msg, class: "alert alert-danger") }.join %>
        <%= f.hidden_field :reset_password_token %>

        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <%= label_tag :password, "Nova senha (6 dígitos)" %>
            <%= f.password_field :password, class: 'form-control', autofocus: true, required: true, pattern: "\\d{6}" %>
          </div>
        </div>


        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <%= label_tag :password_confirmation, "Confirmação da Senha" %>
            <%= f.password_field :password_confirmation, class: 'form-control', required: true, pattern: "\\d{6}" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <br>
            <%= f.submit "Alterar Senha", class: "btn btn-primary btn-sm pull-right" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
