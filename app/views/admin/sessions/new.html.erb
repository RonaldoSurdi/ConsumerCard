<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
      <%= image_tag "frontend/consumer_card.png", title: "ConsumerCard", alt: "ConsumerCard", style: "padding: 50px 0" %>
    </div>
  </div>

  <div class="row">
    <h5 class="text-center">Acesso Administração/Franquia/Estabelecimento</h5>
    <div id="login-wrapper" class="session-admin">
      <%= render partial: 'general/messages' %>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Senha' %>
          <%= f.password_field :password, class: 'form-control', required: true %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %> <%= f.label :remember_me, 'Manter conectado' %>
            </label>
          </div>
        <% end %>

        <%= f.submit "Login", class: 'btn btn-success' %>
      <% end %>

      <br />
      <%= link_to "Esqueci Minha Senha", new_user_password_path %><br />
    </div>
  </div>

  <footer class="navbar navbar-default navbar-fixed-bottom text-center" role="navigation">
    SAINTEC Sistemas | Copyright <%= Time.now.strftime '%Y' %>
  </footer>
</div>