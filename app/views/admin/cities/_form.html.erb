<div class="row">
  <div class="col-md-6">
    <%= form_for(@city) do |f| %>

      <div class="<%= get_class_control_form(@city, 'description') %>">
        <%= f.label :description, 'Descrição', class: 'control-label' %><br>
        <%= f.text_field :description, class: 'form-control', autofocus: true, required: true  %>
        <span class="help-block"><%= @city.errors.messages[:description].join %></span>
      </div>

      <div class="<%= get_class_control_form(@city, 'uf') %>">
        <%= f.label :uf, 'UF', class: 'control-label' %><br>
        <%= f.select :uf, @uf.collect {|k, v| [v, k] }, {include_blank: 'Selecione a UF'}, class: "form-control", required: true %>
        <span class="help-block"><%= @city.errors.messages[:uf].join %></span>
      </div>


      <%= f.submit 'Gravar', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>