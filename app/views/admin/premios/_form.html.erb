<div class="row">
  <div class="col-md-6">
    <%= form_for([@admin, @premio], html: { multipart: true }) do |f| %>
      
      <div class="row">
        <div class="<%= get_class_control_form(@premio, 'descricao') %> col-md-12">
          <%= f.label :descricao, 'Descrição', class: 'control-label' %>
          <%= f.text_field :descricao, class: 'form-control', autofocus: true, required: true  %>
          <span class="help-block"><%= @premio.errors.messages[:descricao].join %></span>
        </div>
      </div>

      <div class="row">
        <div class="<%= get_class_control_form(@premio, 'tipo_usuario') %> col-sm-12">
          <%= f.label :tipo_usuario, "Tipo de Plano" %>
          <%= f.select :tipo_usuario_id, @tipos.collect {|tipo| [tipo.descricao, tipo.id]}, {}, class: "form-control", required: true %>
          <span class="help-block"><%= @premio.errors.messages[:tipo_usuario].join %></span>
        </div>
      </div>

      <div class="row">
        <div class="<%= get_class_control_form(@premio, 'descricao_completa') %> col-md-12">
          <%= f.label :descricao_completa, 'Descrição Completa', class: 'control-label' %>
          <%= f.text_area :descricao_completa, class: 'form-control', required: true, rows: 10  %>
          <span class="help-block"><%= @premio.errors.messages[:descricao_completa].join %></span>
        </div>
      </div>

      <div class="row">
        <div class="<%= get_class_control_form(@premio, 'imagem') %> col-md-12">
          <%= f.label :imagem, 'Imagem (Se não informado será mantida a imagem anterior)', class: 'control-label' if @premio.id %>
          <%= f.label :imagem, 'Imagem', class: 'control-label' unless @premio.id %>
          <%= f.file_field :imagem %>
          <span class="help-block"><%= @premio.errors.messages[:imagem].join %></span>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= f.submit 'Gravar', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>