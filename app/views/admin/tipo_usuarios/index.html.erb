<h1>Tipos de Usuários <small>Gerenciamento</small></h1>

<%= breadcrumb %>
<%= messages %>

<div class="actions">
  <div class="row">
    <%= form_tag nil, method: :get do %>
      <div class="col-md-3">
        <%= text_field_tag :q, @filter, placeholder: "Filtro de Pesquisa", class:  "form-control" %>
      </div>
      <div class="col-md-9">
        <button class="btn btn-primary" type="submit">Pesquisar</button>
        <%= link_to 'Novo Tipo de Usuário', new_tipo_usuario_path, class: 'btn btn-success btn-sm pull-right' %>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @tipos %>

<table class="table table-hover table-striped">
  <thead>
    <tr>
    <th>#</th>
      <th>Descrição</th>
      <th>Pontos de Indicação</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos.each do |tipo| %>
      <tr>
        <td><%= link_to tipo.id, tipo %></td>
        <td><%= tipo.descricao %></td>
        <td><%= tipo.quantidade_indicacoes %></td>
        <td><%= link_to t('Edit'), edit_tipo_usuario_path(tipo) %></td>
        <td><%= link_to t('Destroy'), tipo, method: :delete, data: { confirm: 'Você confirma a exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>