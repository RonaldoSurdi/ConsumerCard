<table style="width: 100%; height: 100%">
	<tr valign="middle">
		<td align="center">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
            <%= image_tag "frontend/consumer_card.png", title: "ConsumerCard", alt: "ConsumerCard", style: "margin-top: -100px" %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4 text-center">
            <br /><br />
            <%= form_tag carregar_cidades_home_index_path, method: "get", remote: true, id: "form_inicial" do  %>
              <%= select_tag :uf, options_for_select(@ufs.collect{|k,v|[v,k]}), class:"form-control", autofocus: true %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-4 text-center">
            <br />
            <select id="cidade" name="cidade" class="form-control" style="visibility: hidden"></select>
          </div>
        </div>
      </div>
		</td>
	</tr>
</table>

